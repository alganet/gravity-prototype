; Supercluster Editor Configuration
;
; These are settings required for a nice and cozy
; formatting of our source.

; Global Settings
;
; - Unix-style newlines
; - Removes trailing spaces from lines
; - Adds a newline to the end of file if not present
; - Suggests 78 width line lenght (RFC 5322 Section 2.1.1)
[*]
  end_of_line = lf
  charset = utf-8
  trim_trailing_whitespace = true
  insert_final_newline = true
  rulers = 78,120

; Specific format settings

[**.php]
  indent_style = space
  indent_size = 4

[**.ini]
  indent_style = space
  indent_size = 2

[**.js]
  indent_style = space
  indent_size = 2

[**.json]
  indent_style = space
  indent_size = 2
